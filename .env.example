
# Application configuration
PORT=3000
NODE_ENV=development

# MariaDB configuration
DB_HOST=db # Matches service name in docker-compose.yml
DB_PORT=3306 # Matches docker-compose.yml service port
DB_ROOT_PASSWORD=
DB_NAME= 
DB_USER=
DB_PASSWORD= 
DATABASE_URL="mysql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}"

# Seed database on startup (set to true to enable)
SEED_DATABASE=true

# CORS allowed origin (use HTTPS in production)
CORS_ORIGIN=http://localhost:5000

# JWT secret - MUST be a strong, randomly-generated string in production
# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE_ME_WITH_RANDOM_SECRET

# JWT token expiration time
JWT_EXPIRES_IN=1h

# Bcrypt salt rounds (10-12 recommended)
BCRYPT_SALT_ROUNDS=10